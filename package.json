{
    "name": "hex-recs",
    "version": "1.0.0",
    "scripts": {
        "client": "cd client && yarn start",
        "server": "nodemon server.js",
        "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
        "start": "node server.js",
        "heroku-postbuild": "cd client && yarn install && yarn build"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "dotenv": "^10.0.0",
        "express": "^4.16.4"
    },
    "devDependencies": {
        "concurrently": "^4.0.1"
    }
}
